  {
      "name": "Ankimo",
      "version": "0.2.0",
      "description": "Browser extension for sending Japanese words to Anki",
      "permissions": ["storage"],
      "manifest_version": 2,
      "content_scripts": [{
          "matches": ["http://tangorin.com/*"],
          "js": ["worker.js"]
      }],
      "icons": {
          "128": "icon.png"
      },
      "background": {
          "scripts": ["background.js"],
          "persistent": false
      },
      "options_ui": {
          "page": "options.html",
          "chrome_style": true
      }
  }
